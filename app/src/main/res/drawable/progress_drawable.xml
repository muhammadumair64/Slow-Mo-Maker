<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <size android:height="@dimen/_3sdp"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
<!--                <solid android:color="#17c8f0"/>-->
                <gradient
                    android:startColor="@color/gradient_end"
                    android:endColor="@color/gradient_start"
                    android:angle="45"
                    />
                <size android:height="@dimen/_3sdp"/>
                <corners android:radius="4dp"/>
            </shape>
        </clip>
    </item>
</layer-list>